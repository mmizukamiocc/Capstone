<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_backgroundImage"
        android:scaleType="fitCenter"
        android:src="@drawable/cat"
        android:layout_above="@+id/laName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/laPassword"
        android:layout_alignTop="@+id/laName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_password"
        android:gravity="left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/laLoginButton"
        android:layout_below="@+id/laPassword"
        android:layout_alignLeft="@+id/laPassword"
        android:layout_alignStart="@+id/laPassword"
        android:layout_alignRight="@+id/laPassword"
        android:layout_alignEnd="@+id/laPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/laName"
        android:ems="10"
        android:hint="@string/enter_username"
        android:layout_marginBottom="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/laPassword"
        android:layout_alignStart="@+id/laPassword"
        android:gravity="left" />

    <Button
        android:text="@string/register_here"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/laRegisterHere"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/laPassword"
        android:layout_alignLeft="@+id/laPassword"
        android:layout_alignStart="@+id/laPassword" />

    <TextView
        android:text="@string/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@android:color/black"
        android:layout_below="@+id/main_backgroundImage"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />
</RelativeLayout>